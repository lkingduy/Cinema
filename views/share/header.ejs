<!-- header + navbar -->
<div class="header container-fluid" style="margin-bottom: 450px">
    <div class="row">
        <a class="col-md-offset-1 col-md-2" href="/" style="text-decoration: none">
            <h1 style="margin-top: 12px">Cinema</h1>           
        </a>                  
            <div class="col-md-3">
                <form action="" class="navbar-brand">
                    <input class="form-input" type="text" placeholder="Search here"/>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search">                      
                        </i>
                    </button>                  
                </form>
            </div>
            <% if(name != null) {%>

                <div class="col-md-offset-1 col-md-5">                  
