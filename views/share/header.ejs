                            <p><%= name %></p>
                        </a>
                        <a class="btn navbar-brand" href="/logout" style="padding: 20px 20px">
                            <i class="fa fa-user-plus fa-lg" style="color: white"></i>
                            <p>Dang Xuat</p>
                        </a>
                    </div>
                <% } else { %>
                <div class="col-md-offset-3 col-md-3">
                        <a class="btn navbar-brand" href="#" data-toggle="modal" data-target="#myModal" style="padding: 20px 20px">
                            <i class="fa fa-sign-in fa-lg" style="color: white"></i>
                            <p>Dang nhap</p>
                        </a>
                        <a class="btn navbar-brand" href="#" data-toggle="modal" data-target="#myModal2" style="padding: 20px 20px">
                            <i class="fa fa-user-plus fa-lg" style="color: white"></i>
                            <p>Dang ki</p>
                        </a>
                    </div>
                <% } %>

    </div>
