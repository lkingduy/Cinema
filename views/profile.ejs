<body>
    <!-- header + slide -->
    <%- include ./share/header.ejs %>
        <%- include ./share/modal.ejs %>

        <div class="container show-submenu">
                <div class="row">
                    <div class="col-md-12">
                        <h1 style="margin-bottom: 50px; font-size: 40px;" class="col-md-12 center-item">
                            <img src="/images/heading-left-line.png" style="line-height: 30px;">&nbsp;&nbsp;
                            <span style="color:rgb(40, 96, 144);">Profile của
                                <%= name[0] %>
                            </span>
                            &nbsp;&nbsp;
                            <img src="/images/heading-right-line.png" style="line-height: 30px;">
                        </h1>
                    </div>
                </div>

            </div>
            <!-- profile -->
            <div class="container">
                    <form action="/profile/saveProfile" method="POST" ref='uploadForm' id='uploadForm' encType="multipart/form-data">
                <div class="row">
                    <% if(users.avatar == null) { %>
                        <div class="col-md-4">
                                <input type="hidden" name="id" value="<%= users.id %>"/>
                                <label class="btn" for="exampleFormControlFile1">
                                    <img src="/images/avatar.png" class="img-upload" id="blah" width="250" height="250"/>
                                </label>
                                
    
                                <label  class="btn btn-primary text-center center-item" for="exampleFormControlFile1" style="margin-left: 70px;">
                                    Chọn ảnh đại diện</label>
                                <input type="file" class="form-control-file hide" id="exampleFormControlFile1" name="avatar" onchange="readURL(this);">
                        </div>
                        <% } else { %>
                        <div class="col-md-4">
                                <input type="hidden" name="id" value="<%= users.id %>"/>
                                <label class="btn" for="exampleFormControlFile1">
                                    <img src="<%= users.avatar %>" class="img-upload" id="blah" width="250" height="250"/>
                                </label>
                                
    
                                <label  class="btn btn-primary text-center center-item" for="exampleFormControlFile1" style="margin-left: 70px;">
                                    Chọn ảnh đại diện</label>
                                <input type="file" class="form-control-file hide" id="exampleFormControlFile1" name="avatar" onchange="readURL(this);">
                        </div>
                   <% } %>
                    <div class="col-md-8 profile-form">
                        
                            <div class="form-group">
                                    <i class="fa fa-envelope fa-lg"></i>&nbsp;&nbsp;<label>Email</label>
                                <input type="text" class="form-control" value="<%= users.email %>" disabled="disabled" name="email"/>
                            </div>
                            <div class="form-group">
                                    <i class="fa fa-address-card fa-lg"></i>&nbsp;&nbsp;<label>Name</label>
                                <input type="text" class="form-control" value="<%= users.name %>" name="name"/>
                            </div>
                            <div class="form-group">
                                    <i class="fa fa-phone-square fa-lg"></i>&nbsp;&nbsp;<label>Phone</label>
                                    <input type="text" class="form-control" value="<%= users.phone %>" name="phone" pattern="^(\d{10}|\d{11})$"/>
                                </div>
                            <div class="form-group">
                                <button class="btn btn-primary" type="submit">Save</button>
                            </div>
                        
                    </div>
                </div>
            </form>
